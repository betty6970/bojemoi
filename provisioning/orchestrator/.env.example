# Bojemoi Orchestrator Configuration
# Copy this file to .env and fill in the values
# SECURITY: All credentials are REQUIRED - no defaults are used

# =============================================================================
# DATABASE (Required)
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=  # REQUIRED: Set a secure password
POSTGRES_DB=deployments

# =============================================================================
# GITEA (Required)
# =============================================================================
GITEA_URL=https://gitea.bojemoi.me
GITEA_TOKEN=  # REQUIRED: Generate at Gitea > Settings > Applications > Generate Token
GITEA_REPO_OWNER=bojemoi
GITEA_REPO=bojemoi-configs

# =============================================================================
# XENSERVER (Required)
# =============================================================================
XENSERVER_URL=https://xenserver.bojemoi.lab
XENSERVER_HOST=xenserver.bojemoi.lab
XENSERVER_USER=root
XENSERVER_PASS=  # REQUIRED: XenServer root password

# =============================================================================
# DOCKER (Optional - defaults shown)
# =============================================================================
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_SWARM_URL=unix:///var/run/docker.sock
DOCKER_SWARM_MANAGER=true

# =============================================================================
# IP VALIDATION (Optional)
# =============================================================================
IP_VALIDATION_ENABLED=true
ALLOWED_COUNTRIES=FR,DE,CH,BE,LU,NL,AT

# =============================================================================
# CORS (Production - restrict to your domains)
# =============================================================================
CORS_ORIGINS=https://bojemoi.me,https://admin.bojemoi.me

# =============================================================================
# API CONFIGURATION (Optional)
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
LOG_LEVEL=INFO
DEBUG=false

# =============================================================================
# SCHEDULER (Optional)
# =============================================================================
CHECK_INTERVAL_MINUTES=5
ENABLE_SCHEDULER=true
